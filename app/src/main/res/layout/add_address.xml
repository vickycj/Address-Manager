<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_root_add"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="@dimen/padding_left_right"
    android:layout_height="match_parent">


    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:id="@+id/address_name_et"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_slab"
        android:hint="@string/name_placeholder"
        android:inputType="text"
        android:textSize="18sp">

    </android.support.design.widget.TextInputEditText>

    <android.support.design.widget.TextInputEditText
        android:layout_width="match_parent"
        android:id="@+id/full_address_et"
        android:layout_height="@dimen/full_address_height"
        android:fontFamily="@font/roboto_slab"
        android:hint="@string/address_placeholder"
        android:inputType="textMultiLine"
        android:textSize="14sp">

    </android.support.design.widget.TextInputEditText>

</LinearLayout>